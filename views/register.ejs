<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>


        <link rel="stylesheet" type="text/css" href="/stylesheets/style.css"> 
    <style>
        .body-bg {
            background-color: #114af4;
            background-image: linear-gradient(315deg, #2181e8 0%, #074c96 74%);
        }
    </style>
</head>
<body class="body-bg">
    
    <main class="bg-white max-w-lg mx-auto p-8 md:p-12 my-10 rounded-lg shadow-2xl"> 
        <section>
            <h3 class="font-bold text-2xl">Sign Up With Your Username </h3>
            <p class="text-gray-600 pt-2"></p>
        </section>
   
        <%- include('./partials/messages.ejs') %>

       <section class="mt-10">
            <form class="flex flex-col" method="post" action="/users/register">
                <div class="mb-6 pt-3 rounded bg-gray-200">
                    <label class="block text-gray-700 text-sm font-bold mb-2 ml-3" for="username">Username</label>
                    <input  required minlength="4" maxlength="20" type="text" name="username" id="username" 
                    class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 
                    focus:border-purple-600 transition duration-500 px-3 pb-3">
                </div>
                 <div class="mb-6 pt-3 rounded bg-gray-200">
                    <label class="block text-gray-700 text-sm font-bold mb-2 ml-3" for="password">Password</label>
                    <input required minlength="5" maxlength="20"  type="password" name="password" id="password" 
                    class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 
                    focus:border-purple-600 transition duration-500 px-3 pb-3">
                </div>
                <div class="mb-6 pt-3 rounded bg-gray-200">
                    <label class="block text-gray-700 text-sm font-bold mb-2 ml-3" for="password2">Confirm Password</label>
                    <input required minlength="5" maxlength="20"  type="password" name="password2" id="password2" 
                    class="bg-gray-200 rounded w-full text-gray-700 focus:outline-none border-b-4 border-gray-300 
                    focus:border-purple-600 transition duration-500 px-3 pb-3">
                </div>
                <button class="bg-purple-600 hover:bg-purple-700 text-white font-bold py-2 rounded shadow-lg 
                hover:shadow-xl transition duration-200" type="submit">Submit</button>
                   <div class="max-w-lg mx-auto text-center mt-8 mb-6">
        <!-- <p class="text-purple-600">Or? <a href="/auth/google" class="font-bold hover:underline">Sign up with google</a>.</p> -->
    </div>
            </form>
        </section>
   
</body>
</html>